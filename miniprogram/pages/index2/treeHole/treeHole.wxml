<!--pages/index2/treeHole/treeHole.wxml-->
<scroll-view class='theBackground'>
  <block wx:for="{{treeHoleData}}" wx:for-index="index" wx:for-item="item" wx:if="{{item.tag==treeHoleType}}">
    <view class='singleBlock'>
      <view class="single_top_container in_mid">
        <image src="/pages/index2/logo/people.svg" mode='aspectFill' class="host_head_img"></image>
        <view class="host_info_container">
          <view class="nick_name color" space="ensp"> {{item.name}}</view>
          <view class="time_info" space="ensp">
         {{treeHoleDate[index]}}
          </view>
        </view>
      </view>
      <view class="single_body_container">
        <text class="single_body">
          {{item.mainBody}}
        </text>
        <view class="single_agree" space="ensp" style="position:relative; bottom:0">{{item.goodCount}} 人点赞 </view>
      </view>
    </view>
  </block>
</scroll-view>